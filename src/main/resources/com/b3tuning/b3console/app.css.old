 }
 
 
/*******************************************************************************
 *                                                                             *
 * Border                                                                      *
 *                                                                             *
 ******************************************************************************/
 .border {
    -fx-background-radius: 5.0;
    -fx-background-insets: 0.0 5.0 0.0 5.0;
    -fx-border-color: var(--b3-color-light-grey);
    -fx-padding: 20;

 }

 
/*******************************************************************************
 *                                                                             *
 * TextField input control                                                     *
 *                                                                             *
 ******************************************************************************/
.text-input {
 	-fx-background-color: -fx-text-box-border, -fx-control-inner-background;
}
 .text-input:disabled {
	-fx-opacity: 0.9;
}
.text-input:readonly {
    -fx-background-insets: 0, 0.5;
    -fx-background-radius: 1, 0.5;
}

/*******************************************************************************
 *                                                                             *
 * Circular Progress indicator                                                 *
 *                                                                             *
 ******************************************************************************/
.circleindicator-container  {	
	circleindicator-color: #197484;
	-fx-padding: 3.0;
	-fx-background-color: -fx-background;
}

.circleindicator-label {
	-fx-font-family: Roboto;
	-fx-font-weight: bold;
 	-fx-font-size: 10pt;
	-fx-text-fill: circleindicator-color;
	-fx-padding: 4.0;
}

/*******************************************************************************
 *                                                                             *
 * Ring Progress indicator                                                     *
 *                                                                             *
 ******************************************************************************/
.ringindicator {
	-fx-ring-width: 2.0;
	-fx-inner-radius: 16.0;
}
.ringindicator-inner-circle {
	-fx-opacity: 0.2;
	-fx-stroke: circleindicator-color; 
	-fx-stroke-width: 0.5px;
	-fx-fill: -fx-background;
}
.ringindicator-filler {
	-fx-stroke: circleindicator-color; 
	-fx-fill: -fx-background;
	-fx-stroke-line-cap: butt;
}
.ringindicator-outer-circle-secondary {
	-fx-opacity: 0.2;
	-fx-stroke: circleindicator-color; 
	-fx-stroke-width: 0.5px;
	-fx-fill: -fx-background;
}
.indeterminate {
	-fx-opacity: 0.9;
	-fx-stroke: linear-gradient(from 0.0% 0.0% to 70.0% 70.0%, circleindicator-color 70.0%, white 75.0%, white);
}

/*******************************************************************************
 *                                                                             *
 * Job Progress                                                                *
 *                                                                             *
 ******************************************************************************/
.progress-bar > .bar {
    -fx-background-insets: 1 1 2 1;
    -fx-background-radius: 3;
    -fx-padding: 0.20em;
}
.progress-bar > .track {
      -fx-background-color:
          -fx-shadow-highlight-color,
          -fx-text-box-border,
          -fx-control-inner-background;
}

.inprogress-bar {
	-fx-accent: #00DEA2;
	 -fx-opacity: 0.5;
}
.completed-bar {
	-fx-accent: #00DEA2;
	 -fx-opacity: 0.2;
}
.failed-bar {
	-fx-accent: #DE3300;
	 -fx-opacity: 0.3;
}
