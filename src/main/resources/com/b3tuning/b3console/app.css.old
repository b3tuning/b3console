}

.action-toggle-button:selected,
.action-toggle-button:armed {
    -fx-background-color: var(--b3-color-theme-blue);
    -fx-background-radius: 2;
    -fx-font-family: FontAwesome;
    -fx-font-size: 14pt;
    -fx-text-fill: var(--b3-color-white);
    -fx-border-radius: 2;
}

.action-toggle-button:focused {
    -fx-background-color: var(--b3-color-theme-blue);
    -fx-background-radius: 2;
    -fx-font-family: FontAwesome;
    -fx-font-size: 14pt;
    -fx-text-fill: var(--b3-color-white);
    -fx-border-radius: 2;
