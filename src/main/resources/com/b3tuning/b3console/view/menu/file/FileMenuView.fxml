<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<Menu xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.b3tuning.b3console.view.menu.file.FileMenuView"
      text="File">
    <MenuItem onAction="#newFileAction" text="New"/>
    <MenuItem onAction="#openFileAction" text="Open"/>
    <Menu fx:id="recentFilesMenu" text="Recent">
        <MenuItem disable="true" text="No Recently opened configs"/>
    </Menu>
    <MenuItem fx:id="closeFileMenuItem" onAction="#closeFileAction" text="Close"/>
    <SeparatorMenuItem/>
    <MenuItem fx:id="saveFileMenuItem" onAction="#saveFileAction" text="Save"/>
    <MenuItem fx:id="saveFileAsMenuItem" onAction="#saveFileAsAction" text="Save As"/>
    <SeparatorMenuItem/>
    <MenuItem fx:id="sendFileMenuItem" onAction="#sendFileAction" text="Send"/>
    <SeparatorMenuItem/>
    <MenuItem onAction="#exitAction" text="Exit"/>
</Menu>
