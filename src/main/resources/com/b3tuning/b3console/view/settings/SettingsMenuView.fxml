<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<AnchorPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.b3tuning.b3console.view.settings.SettingsMenuView">

    <AnchorPane styleClass="white-background-with-border" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
                AnchorPane.topAnchor="60.0">

        <AnchorPane AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="130.0">
            <Label styleClass="tile-label-text" text="Download Location" AnchorPane.leftAnchor="0.0"
                   AnchorPane.topAnchor="0.0"/>

            <TextField fx:id="downloadPath" editable="false" prefHeight="28.0" promptText="Select Download Directory..."
                       AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="90.0"
                       AnchorPane.topAnchor="22.0"/>
            <Button fx:id="selectDirectory" mnemonicParsing="false" prefHeight="28.0" prefWidth="40.0" styleClass="icon"
                    AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="22.0"/>
        </AnchorPane>
        <HBox spacing="10.0" AnchorPane.bottomAnchor="130.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0"
              AnchorPane.topAnchor="53.0"
              prefHeight="50.0" maxHeight="50.0">
            <fx:define>
                <ToggleGroup fx:id="moduleGroup"/>
            </fx:define>
            <ToggleButton fx:id="doorButton" alignment="BASELINE_CENTER" mnemonicParsing="false"
                          styleClass="toggle-button" text="Door Control"
                          toggleGroup="$moduleGroup"/>
            <ToggleButton fx:id="shifterButton" alignment="BASELINE_CENTER" mnemonicParsing="false"
                          styleClass="toggle-button" text="Shifter"
                          toggleGroup="$moduleGroup"/>
            <ToggleButton fx:id="transButton" alignment="BASELINE_CENTER" mnemonicParsing="false"
                          styleClass="toggle-button" text="Trans"
                          toggleGroup="$moduleGroup"/>
        </HBox>
    </AnchorPane>

    <Label styleClass="tile-text" text="SETTINGS" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="15.0"/>
    <Label fx:id="version" styleClass="version-label-text" AnchorPane.bottomAnchor="10.0"
           AnchorPane.rightAnchor="10.0"/>
</AnchorPane>
