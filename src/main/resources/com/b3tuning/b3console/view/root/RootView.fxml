<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<BorderPane fx:controller="com.b3tuning.b3console.view.root.RootView" styleClass="module-grey-tile-background"
            AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
            AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1">
    <left>
        <AnchorPane fx:id="leftPane" maxWidth="87.0" minWidth="87.0" prefWidth="87.0" BorderPane.alignment="TOP_LEFT">
            <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="-13.0"
                  AnchorPane.topAnchor="0.0">
            </VBox>
        </AnchorPane>
    </left>
    <top>
        <AnchorPane fx:id="topPane" maxHeight="70.0" minHeight="70.0" prefHeight="70.0" styleClass="top-menu-background"
                    BorderPane.alignment="TOP_LEFT">
            <ImageView fitHeight="70.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.topAnchor="0.0">
                <Image url="@B3Tuning.png"/>
            </ImageView>
            <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="30.0"
                  AnchorPane.topAnchor="0.0">
                <VBox alignment="CENTER">
                    <padding>
                        <Insets bottom="5.0" top="5.0"/>
                    </padding>
                </VBox>
                <Button fx:id="logOutButton" styleClass="header-button">
                    <tooltip>
                        <Tooltip text="Log out"/>
                    </tooltip>
                </Button>
            </HBox>
        </AnchorPane>
    </top>
    <center>
        <SplitPane fx:id="centerSplitPane">
            <StackPane fx:id="centerPane" alignment="TOP_LEFT" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0"
                       AnchorPane.topAnchor="0.0" BorderPane.alignment="TOP_LEFT"/>
            <!-- the help pane is added here dynamically -->
        </SplitPane>
    </center>
</BorderPane>
